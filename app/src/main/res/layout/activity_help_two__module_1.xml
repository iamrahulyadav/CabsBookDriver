<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#36dacfcf"
    tools:context="com.example.archirayan.cabsbookdriver.activity.help.Two.HelpTwo_Module_1">

    <LinearLayout
        android:id="@+id/linear_help_modul_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#000000"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_back_helpactivity2"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_back_white"/>

        <TextView
            android:id="@+id/txt_tital_modul_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp"
            android:text="Help"
            android:layout_marginTop="@dimen/_5sdp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_module_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="#000000"
        android:text="Resetting your password"/>

    <TextView
        android:id="@+id/txt_module_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="If you forgot your password or need it to be reset, you can click the link below to reset it. Please enter the email address linked to your CabsBook account."/>

    <TextView
        android:id="@+id/txt_reseroassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD HERE"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="#09cbf2"/>
    <TextView
        android:id="@+id/txt_module_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="You should receive an email that guides you through required step. If you haven't received the email after a few minutes, be sure to chek your spam or junk folder."/>


    <LinearLayout
        android:id="@+id/linear_helpful"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:id="@+id/txt_helpful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:text="Was this helpful?"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp">

            <ImageView
                android:id="@+id/img_help_1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_help_1"/>
            <ImageView
                android:id="@+id/img_help_2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_help_2"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
