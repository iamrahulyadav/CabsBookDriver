<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#36dacfcf"
    tools:context="com.example.archirayan.cabsbookdriver.activity.help.Two.HelpTwo_Module_2">

    <LinearLayout
        android:id="@+id/linear_help_modul_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#000000"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_back_helpactivity2"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_back_white"/>

        <TextView
            android:id="@+id/txt_tital_modul_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp"
            android:text="Help"
            android:layout_marginTop="@dimen/_5sdp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_module_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="#000000"
        android:text="Updating account information"/>

    <TextView
        android:id="@+id/txt_module_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="Use your driver app to update your phone number, email address, profile photo, and other info. Here's how:"/>

    <TextView
        android:id="@+id/txt_reseroassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Select Account from the menu."
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txt_module_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="2. Tap EDIT under your name to view your current info."/>

    <TextView
        android:id="@+id/txt_module_line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="3. Tap the pencil icon at the top right of the screen."/>
    <TextView
        android:id="@+id/txt_module_line_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="4. Enter your account password."/>
    <TextView
        android:id="@+id/txt_module_line_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="5. Update your phone number,address,or email."/>
    <TextView
        android:id="@+id/txt_module_line_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="6. For your profile photo, select Change Photo to update, Take Photo to take a new photo, or Choose from Library to select an existing photo.Profile photo changes require up to 24 hours for review."/>

    <TextView
        android:id="@+id/txt_module_line_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        android:textColor="#000000"
        android:text="You can also use your app to make update to your vehicle infomation. Please note that updating vehicle documentation includes review by Cabsbook and may not take immediate effect in your account."/>


    <LinearLayout
        android:id="@+id/linear_helpful"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:id="@+id/txt_helpful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:text="Was this helpful?"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp">

            <ImageView
                android:id="@+id/img_help_1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_help_1"/>
            <ImageView
                android:id="@+id/img_help_2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_help_2"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
