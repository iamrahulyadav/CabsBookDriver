<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#36dacfcf"
    tools:context="com.example.archirayan.cabsbookdriver.activity.help.one.HelpOne_Module_2">

    <LinearLayout
        android:id="@+id/linear_help_modul_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#000000"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_back_helpactivity2"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_back_white"/>

        <TextView
            android:id="@+id/txt_tital_modul_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp"
            android:text="Help"
            android:layout_marginTop="@dimen/_5sdp"/>
    </LinearLayout>


            <TextView
                android:id="@+id/txt_module_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000000"
                android:text="I'm unable to sign in"/>

            <TextView
                android:id="@+id/txt_module_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="#000000"
                android:text="Make sure you have 3G/4G network connection when you're trying to sign in."/>
            <TextView
                android:id="@+id/txt_module_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="#000000"
                android:text="Please call up your local phone support number if you have forgotten your login credentials."/>

            <LinearLayout
                android:id="@+id/linear_txt_getintouch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="#19000000">

                <TextView
                    android:id="@+id/txt_module_line_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="#000000"
                    android:text="GET IN TOUCH"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_visitus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_visitus"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/ic_visit"/>

                <TextView
                    android:id="@+id/txt_visitus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:text="Visit Us In Person"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_helpful"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/txt_helpful"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:text="Was this helpful?"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/img_help_1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_help_1"/>
                    <ImageView
                        android:id="@+id/img_help_2"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_help_2"/>
                </LinearLayout>

            </LinearLayout>

</LinearLayout>
