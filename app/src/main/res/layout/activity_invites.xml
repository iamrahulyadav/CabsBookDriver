<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.archirayan.cabsbookdriver.activity.InvitesActivity">

    <LinearLayout
        android:id="@+id/linear_invite_tital"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_invite_tital"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_back_white"/>

        <TextView
            android:id="@+id/txt_invite_tital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp"
            android:text="INVITES"
            android:layout_marginTop="@dimen/_5sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
            android:text="YOUR INVITE CODE"
            android:layout_marginTop="@dimen/_20sdp"/>
        <TextView
            android:id="@+id/txt_invitecode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"/>

        <Button
            android:id="@+id/btn_copycode"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:text="COPY INVITE CODE"
            android:textSize="@dimen/_10sdp"
            android:textColor="#075866"
            android:background="@drawable/btn_back_copy"
            android:layout_marginTop="@dimen/_10sdp"/>

        <View
            android:id="@+id/view_weekly_1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#55f9f3f3"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:text="Invite your friends to start driving with Uber"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12sdp"
        android:background="#1f050505"/>

</LinearLayout>
