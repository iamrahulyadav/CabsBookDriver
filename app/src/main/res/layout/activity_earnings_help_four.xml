<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36dacfcf"
    android:orientation="vertical"
    tools:context="com.example.archirayan.cabsbookdriver.activity.help.EarningsHelpFour">

    <LinearLayout
        android:id="@+id/linear_help_modul_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#000000"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_back_helpactivity2"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_back_white"/>

        <TextView
            android:id="@+id/txt_tital_modul_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp"
            android:text="Help"
            android:layout_marginTop="@dimen/_5sdp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_module_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_module_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="#000000"
            android:text="Understanding ratings"/>

        <View
            android:id="@+id/view_helpsub_1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#55000000"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_module_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_module_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="#000000"
            android:text="How to improve ratings"/>

        <View
            android:id="@+id/view_helpsub_2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#55000000"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_module_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_module_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="#000000"
            android:text="What are acceptance rates?"/>

        <View
            android:id="@+id/view_helpsub_3"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#55000000"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_module_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_module_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="#000000"
            android:text="What are delivery acceptance rates?"
            android:layout_marginBottom="@dimen/_10sdp"/>

    </LinearLayout>


</LinearLayout>
