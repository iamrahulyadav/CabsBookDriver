<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.archirayan.cabsbookdriver.activity.UserContectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:src="@drawable/ic_clear_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:text="CONTACT"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_user_con_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/txt_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="@dimen/_60sdp"
           android:orientation="horizontal"
           android:layout_gravity="center">

           <LinearLayout
               android:id="@+id/linear_msg"
               android:layout_width="@dimen/_70sdp"
               android:layout_height="@dimen/_55sdp"
               android:orientation="vertical"
               android:layout_marginRight="@dimen/_40sdp">

               <ImageView
                   android:id="@+id/img_msg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:src="@drawable/ic_msg_blue" />

               <TextView
                   android:id="@+id/txt_msg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Massage"
                   android:textColor="#111DE5"
                   android:textSize="@dimen/_15sdp" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/linear_call"
               android:layout_width="@dimen/_70sdp"
               android:layout_height="@dimen/_55sdp"
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/_40sdp">

               <ImageView
                   android:id="@+id/img_call"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:src="@drawable/ic_call" />

               <TextView
                   android:id="@+id/txt_call"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Call"
                   android:textColor="#111DE5"
                   android:textSize="@dimen/_15sdp" />
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>


</LinearLayout>
