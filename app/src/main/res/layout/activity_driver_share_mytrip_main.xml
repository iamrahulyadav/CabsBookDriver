<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.archirayan.cabsbookdriver.activity.DriverShareMytripMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_acceptance_tital"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_acceptance_tital"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/txt_acceptance_tital"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Share my trip"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/lightdark"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Share my trip"
            android:textAllCaps="true"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_16sdp"
            android:layout_height="@dimen/_40sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="On"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

            <Switch
                android:layout_width="@dimen/_50sdp"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Select Contacts from"
            android:textAllCaps="true"
            android:paddingLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textSize="@dimen/_16sdp"
            android:layout_height="@dimen/_40sdp" />

        <LinearLayout
            android:id="@+id/llayout_addressbook"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Address book"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

            <CheckBox
                android:layout_width="@dimen/_50sdp"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_height="@dimen/_50sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Another app"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

            <CheckBox
                android:layout_width="@dimen/_50sdp"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>